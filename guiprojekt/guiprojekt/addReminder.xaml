<UserControl x:Class="guiprojekt.addReminder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <UniformGrid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
            <Label Content="Kom ihåg:" FontSize="13" FontStyle="Italic"   />
            <TextBox Name="titleForReminder" ></TextBox>


        </UniformGrid>

        <Label Content="starttid: (hh:mm)" FontSize="13" FontStyle="Italic" Grid.Row="1"   />
        <TextBox Name="starttid" Grid.Row="1" Grid.Column="1" TextChanged="testTimeInput" ></TextBox>
        <Grid>


        </Grid>
        <Label Content="Alarmtid: (hh:mm)" FontSize="13" FontStyle="Italic" Grid.Row="2"  />
        <TextBox Name="alarmtid" Grid.Row="2" Grid.Column="1" TextChanged="testTimeInput"></TextBox>
        <UniformGrid Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0">
            <CheckBox Name="mondaybox">monday</CheckBox>
            <CheckBox Name="tuesdaybox">tuesday</CheckBox>
            <CheckBox Name ="wednesdaybox">wednesday</CheckBox>
            <CheckBox Name="thursdaybox">thursday</CheckBox>
            <CheckBox Name="fridaybox">friday</CheckBox>
            <CheckBox Name="saturdaybox">saturday</CheckBox>
            <CheckBox Name="sundaybox">sunday</CheckBox>


        </UniformGrid>
        <Button Name="createReminder" Content="Create reminder" Grid.Row="4" Grid.ColumnSpan="2" VerticalContentAlignment="Center" Click="createReminder_Click" IsEnabled="False"></Button>

    </Grid>
</UserControl>

