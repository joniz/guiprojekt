        <Style x:Key="tabortStyle" TargetType="Button">

            <Setter Property="Width" Value="90"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Style.Triggers>

                <Trigger x:Name="tabort" Property="IsEnabled" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Image Source= "Tabort.png"></Image>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>


                </Trigger>

                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Image Source="TabortPushed.png" Width="85" Height="25"></Image>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>




