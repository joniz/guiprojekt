<Window x:Class="guiprojekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:guiprojekt"
        Title="MainWindow" Height="450" Width="550">
    
    <Grid  Background="LightBlue">


        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition  />
            
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130" />
            <ColumnDefinition />
            
        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="2" Background="#ff471a" Content="Daily reminder" FontSize="20" VerticalContentAlignment="Center"></Label>
        <UniformGrid Rows="8" Name="pickMonth" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="black">
            <Button Content="Måndag"  Foreground="white" Background="#262626"></Button>
            <Button Content="Tisdag"  Foreground="white" Background="#262626"></Button>
            <Button Content="Onsdag"  Foreground="white" Background="#262626"></Button>
            <Button Content="Torsdag" Foreground="white" Background="#262626"></Button>
            <Button Content="Fredag"  Foreground="white" Background="#262626"></Button>
            <Button Content="Lördag"  Foreground="white" Background="#262626"></Button>
            <Button Content="Söndag"  Foreground="white" Background="#262626"> </Button>
            <Button Content="Lägg till påminnelse" Foreground="White" Background="#262626"></Button>
        </UniformGrid>

        <UniformGrid Columns="7" Rows="10" Name="kalenderMainWindow" Grid.Row="1" Grid.Column="1">



            <Label Name="monday" Margin="1" Content="Måndag" Background="Beige" Grid.Row="2"></Label>
            <Label Name="tuesday" Margin="1" Content="Tisdag" Background="LightSalmon"></Label>
            <Label Name="wednesday" Margin="1" Content="Onsdag" Background="LightGreen"></Label>
            <Label Name="thursday" Margin="1" Content="Torsdag" Background="LightCoral"></Label>
            <Label Name="friday" Margin="1" Content="Fredag" Background="DarkGray"></Label>
            <Label Name="saturday" Margin="1" Content="Lördag" Background="Purple"></Label>
            <Label Name="sunday" Margin="1" Content="Söndag" Background="DarkGreen"></Label>


        </UniformGrid>


    </Grid>
</Window>
