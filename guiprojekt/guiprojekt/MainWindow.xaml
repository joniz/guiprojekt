    <Grid  Background="LightBlue">


        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition  />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="2" FontSize="20" HorizontalContentAlignment="Center" FontStyle="Italic" Margin="0,0,0.333,0">
            <Label.Background>
                <ImageBrush ImageSource="dailyReminder2.png"></ImageBrush>
            </Label.Background>

        </Label>
        <UniformGrid Rows="8" Name="pickMonth" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="Transparent">
            <Button Cursor="Hand"  Style="{DynamicResource läggTillPåminnelseStyle}"  Name="reminder" Foreground="White"  Click="newReminder_Click"></Button>
            <Button Cursor="Hand"  Style="{DynamicResource måndagStyle}"   Name="monday" Foreground="white" Click="monday_Click"></Button>
            <Button Cursor="Hand"  Style="{DynamicResource tisdagStyle}"  Name="tuesday" Foreground="white" Click="tuesday_Click"></Button>
            <Button Cursor="Hand"  Style="{DynamicResource onsdagStyle}"  Name="wednesday" Foreground="white"  Click="wednesday_Click"></Button>
            <Button Cursor="Hand"  Style="{DynamicResource torsdagStyle}"  Name="thursday"  Foreground="white"  Click="thursday_Click"></Button>
            <Button Cursor="Hand"  Style="{DynamicResource fredagStyle}"  Name="friday"   Foreground="white"  Click="friday_Click"></Button>
            <Button Cursor="Hand"  Style="{DynamicResource lördagStyle}"  Name="saturday"   Foreground="white"  Click="saturday_Click"></Button>
            <Button Cursor="Hand"  Style="{DynamicResource söndagStyle}"  Name="sunday"   Foreground="white"  Click="sunday_Click"></Button>

        </UniformGrid>



        <StackPanel Name="newReminder" Grid.Column="1" Grid.Row="1" Visibility="Collapsed">


            <local:addReminder/>
        </StackPanel>
        <StackPanel Name="showEditReminder" Grid.Column="1" Grid.Row="1" Visibility="Collapsed">
            <local:EditReminder x:Name="editReminder"/>


        </StackPanel>


        <StackPanel Name="infoMonday" Orientation="Vertical" Grid.Column="1" Grid.Row="1" Visibility="Hidden">

        </StackPanel>

        <StackPanel Name="infoTuesday" Orientation="Vertical" Grid.Column="1" Grid.Row="1" Visibility="Hidden">

